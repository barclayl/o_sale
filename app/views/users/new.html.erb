
    <div class="container mt4">
      <div class="row">
        <div class="col-md-8 offset-md-2">
          <!-- <div className="card panel-div"> -->
            <h1 class="text-center form-header-style mt-5 pt-2 pb-3">
              Sign Up
            </h1>

            <div class="form-body-style px-5 pt-4">
              <%= form_with model: @user, local: true do |f| %>
                <!-- helpful for tir -->
              <div class="form-group row">  
                <%= render 'shared/errors', object: @user %>
              </div>
                <div class="form-group row">
                  <%= f.label :first_name, class: "col-md-3 col-form-label"%>
                  <div class="col-md-9">
                    <%= f.text_field :first_name, class: "form-control", id:"first_name" %>
                  </div>
                </div>

                <div class="form-group row">
                  <%= f.label :last_name, class: "col-md-3 col-form-label"%>
                  <div class="col-md-9">
                    <%= f.text_field :last_name, class: "form-control", id:"last_name" %>
                  </div>
                </div>

                <div class="form-group row">
                  <%= f.label :email, class: "col-md-3 col-form-label"%>
                  <div class="col-md-9">
                    <%= f.email_field :email, class: "form-control", id:"email" %>
                  </div>
                </div>

                <div class="form-group row">
                  <%= f.label :password, class: "col-md-3 col-form-label"%>
                  <div class="col-md-9">
                    <%= f.password_field :password, class: "form-control", id:"password" %>
                  </div>
                </div>

                <div class="form-group row">
                  <div class="col-md-10 offset-md-3">
                    <%= f.submit 'Sign Up', class: "btn btn-outline-purple"%>
                  </div>
                </div>
              <% end %>
            </div>
          <!-- </div> -->
        </div>
      </div>
    </div>